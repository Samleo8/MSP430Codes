#include "msp430fr4133.h"

//FRAM READING AND WRITING
extern static const char FRAM_START_ADDRESSES[] = { 0xE000, 0xE100 , 0xE100 }

#define MAX_ADC_CHANNEL 16

//Appliance modes
#define AIRCON 0
#define TV1 1
#define TV2 2

//Number parsing
#define TRUE 0xFF
#define FALSE 0x00

#define ABS(n) (n>0)?n:-n
#define MAX(m,n) (m>n)?m:n
#define MIN(m,n) (m<n)?m:n


void Init_GPIO(void);
void Init_Clock(void);
void Init_ADC(void);
